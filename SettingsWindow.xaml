<Window x:Class="EasyWordWPF_US5.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyWordWPF_US5"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="250" Width="300">
    <Grid>
        <CheckBox x:Name="CheckGrammar" Content="True" HorizontalAlignment="Left" Margin="27,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Keysentive Grammatik" HorizontalAlignment="Left" Margin="21,15,0,0" VerticalAlignment="Top"/>
        <Button Content="Apply" Margin="205,204,60,10"/>
        <Button Content="Close" Margin="250,204,17,10" Click="Close"/>

    </Grid>
</Window>
