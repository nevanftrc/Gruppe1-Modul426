<Window x:Class="EasyWordWPF_US5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyWord - Wortquiz" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Hauptbereich mit Buttons -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="CSV-Datei importieren" Width="200" Margin="10"
                    Click="ImportCsvButton_Click"/>
            <Button Content="Quiz starten" Width="200" Margin="10"
                    Click="StartQuizButton_Click"/>
            <Button Content="Beenden" Width="200" Margin="10"
                    Click="Close"/>

            <!-- Bereich für Software-Informationen -->
            <StackPanel Margin="10">
                <TextBlock Text="ÜbersetzerQuiz" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>
                <TextBlock Text="Entwickler: Beren Atici" Margin="0,5,0,0"/>
                <TextBlock Text="Version: 1.0.0" Margin="0,5,0,0"/>
                <TextBlock Text="Erstellungsdatum: 01.01.2025" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- G/E-Button rechts -->
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <Button Content="G/E" Width="50" Margin="10"
                    Click="SwitchModeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
