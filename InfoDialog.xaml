<Window x:Class="EasyWordWPF_US5.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Info" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Entwickler: Gruppe1" FontSize="14" Margin="0,10"/>
            <TextBlock Text="Version: 1.0.0" FontSize="14" Margin="0,10"/>
            <TextBlock Text="Erstellungsdatum: 17.12.2024" FontSize="14" Margin="0,10"/>
            <TextBlock Text="Bei Problemen wenden Sie sich an die Hotline EasyWord" FontSize="14" Margin="0,10"/>
            <TextBlock Text="Aktuelles Datum: " FontSize="14" Margin="0,10"/>
            <TextBlock Text="{Binding CurrentDate}" FontSize="14" Margin="0,10"/>
        </StackPanel>
        <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="100" Click="CloseButton_Click"/>
    </Grid>
</Window>
