<Window x:Class="EasyWordWPF_US5.EditWordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wort bearbeiten" Height="200" Width="400">
    <Grid>
        <Label Content="Deutsches Wort:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="GermanWordTextBox" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="360"/>

        <Label Content="Englisches Wort:" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <TextBox Name="EnglishWordTextBox" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Width="360"/>

        <Button Content="Speichern" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="100" Click="SaveEditedWord_Click"/>
        <Button Content="Abbrechen" HorizontalAlignment="Left" Margin="270,130,0,0" VerticalAlignment="Top" Width="100" Click="CancelEdit_Click"/>
    </Grid>
</Window>