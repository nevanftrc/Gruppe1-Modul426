<Window x:Class="EasyWordWPF_US5.Views.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sprachauswahl" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Wählen Sie eine Sprache:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ComboBox x:Name="LanguageComboBox" Width="200" Margin="10">
                <ComboBoxItem Content="Türkisch"/>
                <ComboBoxItem Content="Spanish"/>
                <ComboBoxItem Content="Französisch"/>
                <ComboBoxItem Content="Italienisch"/>
                <ComboBoxItem Content="Rusisch"/>
                <ComboBoxItem Content="Arabisch"/>
                <ComboBoxItem Content="Persisch"/>
                <ComboBoxItem Content="Griechisch"/>
            </ComboBox>
            <Button Content="Übernehmen" Width="120" Margin="10" Click="ApplyLanguage_Click"/>
        </StackPanel>
    </Grid>
</Window>
